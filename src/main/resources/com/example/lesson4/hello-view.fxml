<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.lesson4.HelloController" spacing="5">
    <padding>
        <Insets bottom="5" right="5" left="5" top="5"/>
    </padding>
    <TextArea fx:id="messageArea" VBox.vgrow="ALWAYS" editable="false"/>
    <HBox>
        <TextField fx:id="textField" HBox.hgrow="ALWAYS" onAction="#clickEnter"/>
        <Button text="Send" onAction="#clickButton"/>
    </HBox>
</VBox>
